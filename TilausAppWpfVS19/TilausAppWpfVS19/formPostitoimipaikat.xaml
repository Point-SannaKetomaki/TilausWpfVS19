<Window x:Class="TilausAppWpfVS19.formPostitoimipaikat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TilausAppWpfVS19"
        mc:Ignorable="d"
        Title="formPostitoimipaikat" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSuljePtmip" Content="Sulje" HorizontalAlignment="Left" Height="27" Margin="654,376,0,0" VerticalAlignment="Top" Width="116" Click="BtnSuljePtmip_Click"/>
        <Button x:Name="btnLisaaPtmip" Content="Lisää uusi" HorizontalAlignment="Left" Height="27" Margin="488,101,0,0" VerticalAlignment="Top" Width="96" Click="BtnLisaaPtmip_Click"/>
        <DataGrid AutoGenerateColumns="False" x:Name="dgPostitoimipaikat" HorizontalAlignment="Left" Height="393" Margin="28,10,0,0" VerticalAlignment="Top" Width="397" SelectionChanged="DgPostitoimipaikat_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Postinumero}" Header="Postinumero"/>
                <DataGridTextColumn Binding="{Binding Path=Postitoimipaikka}" Header="Postitoimipaikka" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="lblValitutPostinumeroTiedot" Content="Postinumerotietojen ylläpito" HorizontalAlignment="Left" Height="27" Margin="488,23,0,0" VerticalAlignment="Top" Width="249" FontWeight="Bold"/>
        <TextBox x:Name="txtPosNro" HorizontalAlignment="Left" Height="27" Margin="488,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="txtPosTmip" HorizontalAlignment="Left" Height="27" Margin="589,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <Button x:Name="btnPäivitäPTmip" Content="Päivitä" HorizontalAlignment="Left" Height="27" Margin="488,218,0,0" VerticalAlignment="Top" Width="96"/>
        <Button x:Name="btnPoistaPTmip" Content="Poista" HorizontalAlignment="Left" Height="27" Margin="488,323,0,0" VerticalAlignment="Top" Width="96" Click="BtnPoistaPTmip_Click"/>
        <TextBox x:Name="txtPosNroPoista" HorizontalAlignment="Left" Height="27" Margin="488,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="txtPosTmipPoista" HorizontalAlignment="Left" Height="27" Margin="589,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
    </Grid>
</Window>
